{
  "version": 2,
  "buildCommand": "echo 'API-only deployment - no build needed'",
  "outputDirectory": ".",
  "installCommand": "npm install --production",
  "functions": {
    "api/index.ts": {
      "maxDuration": 30
    }
  },
  "builds": [
    {
      "src": "api/index.ts",
      "use": "@vercel/node",
      "config": {
        "packageJson": "package-vercel.json"
      }
    }
  ]
}
